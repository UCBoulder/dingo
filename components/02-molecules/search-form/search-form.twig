{#
/**
 * @file
 * Theme override for a 'form' element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The child elements of the form.
 *
 * @see template_preprocess_form()
 */
#}
<form {{ bem('search')}}>
  {% if children %}
    {{ children }}
  {% else %}
    <div class="search__item">
      <input title="Enter the terms you wish to search for." placeholder="Search OIT" class="form-search form-item__textfield" type="text" size="15" maxlength="128" autocomplete="off">
    </div>
    <div class="form-actions">
      <input type="submit" value="Search" class="form-item__textfield button js-form-submit form-submit">
    </div>
  {% endif %}
</form>
