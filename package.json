    "open-cli": "^7.2.0",
    "pa11y": "^6.2.3",
    "prettier": "3.1.1",
    "react-test-renderer": "^18.2.0",
    "sass-glob-importer": "^1.0.1",
    "twig-testing-library": "^1.1.1",
    "yaml": "^2.3.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
